<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<VBox fx:controller="fr.ece.labyrinthegame.Controllers.MazeController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="15" alignment="CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #e0e0e0); -fx-padding: 20;">

    <!-- Title -->
    <Label text="Maze Game"
           style="-fx-font-size: 24pt; -fx-font-weight: bold;"/>

    <!-- Play Button -->
    <Button fx:id="playBtn"
            text="Play"
            style="-fx-font-size: 16pt; -fx-padding: 8 20;"/>

    <!-- Canvas -->
    <StackPane fx:id="gameLayer">
        <Canvas fx:id="canvas" />
        <ImageView
                fitWidth="32" fitHeight="32"
                   preserveRatio="true"
                   mouseTransparent="true"/>
    </StackPane>


    <!-- Status Label -->
    <Label fx:id="status"
           text="Press Play"
           style="-fx-font-size: 14pt; -fx-font-weight: bold;"/>
</VBox>
